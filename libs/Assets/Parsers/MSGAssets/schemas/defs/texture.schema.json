{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "texture.schema.json",
  "title": "MSGAssets-texture",
  "type": "object",
  "definitions": {
    "textureType": {
      "type": "string",
      "enum": [
        "Texture1D",
        "Texture1DArray",
        "Texture2D",
        "Texture2DArray",
        "Texture2DMultisample",
        "Texture2DMultisampleArray",
        "Texture3D",
        "TextureBuffer",
        "TextureCubemap",
        "TextureCubemapArray",
        "TextureRectangle"
      ]
    },
    "texture": {
      "title": "Texture",
      "type": "object",
      "description": "a texture is a set of images each describing a mipmap level",
      "properties": {
        "uri": {
          "$ref": "external.schema.json#/definitions/uri"
        },
        "name": {
          "$comment": "required if uri is not present",
          "description": "the name of the texture",
          "type": "string"
        },
        "type": {
          "$comment": "required if uri is not present",
          "description": "the type of the texture",
          "$ref": "texture.schema.json#/definitions/textureType"
        },
        "pixelFormat": {
          "$comment": "defaults to the image's pixel format",
          "description": "the format used to interpret the image",
          "$ref": "pixelFormat.schema.json#/definitions/pixelFormat"
        },
        "size": {
          "$comment": "defaults to the image's size",
          "description": "the size of the base image, can be a subset",
          "$ref": "vec.schema.json#/definitions/vec3"
        },
        "offset": {
          "description": "the offset inside the base image",
          "$ref": "vec.schema.json#/definitions/vec3",
          "default": [
            0,
            0,
            0
          ]
        },
        "compressed": {
          "type": "boolean",
          "default": false
        },
        "images": {
          "$comment": "required if uri is not present",
          "description": "the list of images comprising this texture's lods",
          "type": "array",
          "items": {
            "type": "integer",
            "description": "an index into the images list",
            "minimum": 0
          },
          "minItems": 1
        }
      },
      "if": {
        "not": {
          "required": [
            "uri"
          ]
        }
      },
      "then": {
        "required": [
          "name",
          "type",
          "images"
        ]
      }
    }
  }
}