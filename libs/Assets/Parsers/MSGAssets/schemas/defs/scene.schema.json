{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "scene.schema.json",
  "title": "MSGAssets-scene",
  "type": "object",
  "definitions": {
    "scene": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "this scene's name, it's important as it can be used to link it from a parent assets file"
        },
        "entities": {
          "type": "array",
          "description": "a list of index to query from the entities list to add to this scene's root entity children",
          "items": {
            "type": "number",
            "minimum": 0
          }
        },
        "uri": {
          "$ref": "external.schema.json#/definitions/uri"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}