{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "sampler.schema.json",
  "title": "MSGAssets-sampler",
  "type": "object",
  "definitions": {
    "samplerFilter": {
      "type": "string",
      "enum": [
        "Nearest",
        "Linear",
        "NearestMipmapLinear",
        "NearestMipmapNearest",
        "LinearMipmapLinear",
        "LinearMipmapNearest"
      ]
    },
    "samplerWrap": {
      "type": "string",
      "enum": [
        "Repeat",
        "ClampToBorder",
        "ClampToEdge",
        "MirroredRepeat",
        "MirroredClampToEdge"
      ]
    },
    "samplerCompareMode": {
      "type": "string",
      "enum": [
        "None",
        "CompareRefToTexture"
      ]
    },
    "samplerCompareFunc": {
      "type": "string",
      "enum": [
        "LessEqual",
        "GreaterEqual",
        "Less",
        "Greater",
        "Equal",
        "NotEqual",
        "Always",
        "Never"
      ]
    },
    "sampler": {
      "type": "object",
      "properties": {
        "magFilter": {
          "$ref": "sampler.schema.json#definitions/samplerFilter",
          "default": "Linear"
        },
        "minFilter": {
          "$ref": "sampler.schema.json#definitions/samplerFilter",
          "default": "NearestMipmapLinear"
        },
        "wrapModes": {
          "type": "array",
          "items": {
            "$ref": "sampler.schema.json#definitions/samplerWrap"
          },
          "minItems": 3,
          "maxItems": 3,
          "default": [
            "Repeat",
            "Repeat",
            "Repeat"
          ]
        },
        "compareMode": {
          "$ref": "sampler.schema.json#definitions/samplerCompareMode",
          "default": "None"
        },
        "compareFunc": {
          "$ref": "sampler.schema.json#definitions/samplerCompareFunc",
          "default": "Always"
        },
        "minLOD": {
          "type": "number",
          "default": -1000
        },
        "maxLOD": {
          "type": "number",
          "default": 1000
        },
        "lodBias": {
          "type": "number",
          "default": 0
        },
        "maxAnisotropy": {
          "type": "number",
          "default": 16
        },
        "borderColor": {
          "$ref": "vec.schema.json#definitions/vec4",
          "default": [
            0,
            0,
            0,
            1
          ]
        }
      }
    }
  }
}