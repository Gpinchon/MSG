{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "tonemapping.schema.json",
  "title": "MSGAssets-tonemapping",
  "type": "object",
  "definitions": {
    "toneMappingType": {
      "title": "ToneMappingType",
      "type": "string",
      "enum": [
        "None",
        "ACES",
        "Reinhard",
        "Lottes",
        "Neutral"
      ]
    },
    "lottesSettings": {
      "title": "LottesSettings",
      "description": "Lottes tone mapping curve settings",
      "properties": {
        "hdrMax": {
          "type": "number",
          "default": 8.0
        },
        "contrast": {
          "type": "number",
          "default": 0.977
        },
        "shoulder": {
          "type": "number",
          "default": 1.6
        },
        "midIn": {
          "type": "number",
          "default": 0.18
        },
        "midOut": {
          "type": "number",
          "default": 0.267
        }
      }
    },
    "bloomSettings": {
      "title": "BloomSettings",
      "type": "object",
      "properties": {
        "intensity": {
          "type": "number",
          "default": 1.0
        },
        "threshold": {
          "type": "number",
          "default": 1.0
        },
        "smoothing": {
          "type": "number",
          "default": 10.0
        },
        "size": {
          "type": "number",
          "default": 25.0
        },
        "tint": {
          "$ref": "vec.schema.json#/definitions/vec3"
        }
      },
      "default": [
        1,
        1,
        1
      ]
    }
  },
  "toneMappingSettings": {
    "title": "ToneMappingSettings",
    "type": "object",
    "properties": {
      "type": {
        "$ref": "tonemapping.schema.json#/definitions/toneMappingType",
        "default": "ACES"
      },
      "lottesSettings": {
        "$ref": "tonemapping.schema.json#/definitions/lottesSettings"
      },
      "gamma": {
        "type": "number",
        "description": "Gamma used to convert from linear to Rec709 color space"
      }
    }
  },
  "autoExposureSettings": {
    "title": "AutoExposureSettings",
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "minLuminance": {
        "type": "number",
        "default": 0.0001
      },
      "maxLuminance": {
        "type": "number",
        "default": 1000.0
      },
      "key": {
        "type": "number",
        "default": 0.5
      },
      "adaptationSpeed": {
        "type": "number",
        "default": 1.0
      }
    }
  },
  "colorGradingSettings": {
    "title": "ColorGradingSettings",
    "type": "object",
    "properties": {
      "autoExposure": {
        "$ref": "tonemapping.schema.json#/definitions/autoExposureSettings"
      },
      "exposure": {
        "type": "number",
        "default": 0.0
      },
      "saturation": {
        "type": "number",
        "default": 0.0
      },
      "contrast": {
        "type": "number",
        "default": 0.0
      },
      "hueShift": {
        "type": "number",
        "default": 0.0
      }
    }
  }
}