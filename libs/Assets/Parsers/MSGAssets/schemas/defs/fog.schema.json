{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "fog.schema.json",
  "title": "MSGAssets-fog",
  "type": "object",
  "definitions": {
    "fogAreaOp": {
      "type": "string",
      "enum": [
        "Add",
        "Replace"
      ]
    },
    "fogArea": {
      "title": "FogArea",
      "type": "object",
      "description": "a compination of fog shapes",
      "properties": {
        "copyFrom": {
          "$ref": "external.schema.json#/definitions/fromEntity"
        },
        "scattering": {
          "description": "how much light get scattered",
          "$ref": "vec.schema.json#/definitions/vec3",
          "minimum": 0,
          "maximum": 1,
          "default": [
            1,
            1,
            1
          ]
        },
        "emissive": {
          "description": "how much light get emitted",
          "$ref": "vec.schema.json#/definitions/vec3",
          "minimum": 0,
          "default": [
            0,
            0,
            0
          ]
        },
        "extinction": {
          "type": "number",
          "description": "the extinction factor of the fog",
          "minimum": 0,
          "maximum": 1,
          "default": 0.02
        },
        "phaseG": {
          "type": "number",
          "description": "G phase function describes how much forward (g<0) or backward (g > 0) light scatters around",
          "minimum": -1,
          "maximum": 1,
          "default": 0
        },
        "attenuationExponant": {
          "type": "number",
          "description": "defines how much the fog scattering and extinction gets attenuated near the edges of the shapes",
          "minimum": 0,
          "maximum": 1,
          "default": 1
        },
        "op": {
          "description": "defines how this fog area will behave with the global fog",
          "$ref": "fog.schema.json#/definitions/fogAreaOp",
          "default": "Add"
        },
        "shapes": {
          "$ref": "shape.schema.json#/definitions/shapeCombinationShape"
        }
      },
      "required": [
        "shapes"
      ]
    }
  }
}